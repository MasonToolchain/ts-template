{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2016",
    "lib": ["ESNext"],
    "moduleResolution": "bundler",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
